@model eSim.Infrastructure.DTOs.Client.ClientSettingsDTO

@{
    ViewData["Title"] = "Client Settings Index";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Client Settings</h4>

            </div><!-- end card header -->

            <div class="card-body">
                <div class="live-preview">
                    <div class="table-responsive">
                        <table class="table table-striped table-nowrap align-middle mb-0">
                            <thead>

                                <tr>
                                    <th scope="col" class="text-center">Name</th>
                                    <th scope="col" class="text-center">Fixed Commission</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>

                                    <td class="text-center">@(Model is null ? "-" : Model.Name)</td>
                                    <td class="text-center">$@(Model is null ? 0.00M : Model.FixedCommission) </td>
                                    <td class="text-center">
                                        <a data-bs-toggle="tooltip" data-bs-placement="top" title="edit" asp-action="UpdateClientSettings" asp-controller="ClientSettings" asp-route-id="@ViewBag.clientid"><i class="ri-pencil-fill fs-5"></i></a>
                                    </td>

                                </tr>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
    <!-- end col -->
</div>

@section scripts {
    <script>
        @if (TempData["ClientSettingsUpdated"] != null)
        {
            <text>
                    ToastNotification("@TempData["ClientSettingsUpdated"]","success")
            </text>
        }
        
    </script>
}