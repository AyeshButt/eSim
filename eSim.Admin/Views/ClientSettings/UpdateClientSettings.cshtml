@model eSim.Infrastructure.DTOs.Client.ClientSettingsDTO

@{
    ViewData["Title"] = "Update Client Settings";
}
@if (TempData["UpdateClientSettings"] is not null)
{
    @TempData["UpdateClientSettings"]
}
<div class="row my-2">
    <a asp-controller="ClientSettings" asp-action="Index" asp-route-id="@Model.ClientId">
        <i class=" ri-arrow-left-line fs-3"></i>
    </a>

</div>

<div class="row">
    <div class="col-lg-12">
        <form asp-action="UpdateClientSettings" asp-controller="ClientSettings" method="post">
            <input for="ClientId" type="hidden" name="ClientId" value="@Model.ClientId" />
            <input for="Id" type="hidden" name="Id" value="@Model.Id" />
          
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Update Commission</h4>
                   
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label asp-for="FixedCommission" class="form-label">Fixed Commission</label>
                                    <input type="number" asp-for="FixedCommission" class="form-control" min="0" step="0.01" placeholder="Enter your fixed commission value" required />
                                    <span asp-validation-for="FixedCommission" class="text-danger"></span>

                                </div>



                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>
                </div>
                <div class="card-footer">
                    
                                    <button type="submit" class="btn rounded-pill btn-secondary waves-effect waves-light">Submit</button>

                                    <button type="reset" class="btn rounded-pill btn-danger waves-effect waves-light">Reset</button>
                </div>
            </div>
        </form>
    </div>
    <!--end col-->
</div>

@section scripts {
    <script>
    @if (TempData["ClientError"] != null)
        {
            <text>
                        ToastNotification("@TempData["ClientError"]","error")
            </text>
        }

    </script>
}
