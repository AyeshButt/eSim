@model List<eSim.Infrastructure.DTOs.ManageRoleDTO>

<h4>Manager User</h4>

<hr />

<a asp-action="AddRole" class="btn btn-sm btn-outline-primary mb-2 float-end">Add Role</a>

<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Role</th>
        <th>Action</th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.RoleName</td>
            <td>
                <a asp-action="EditRole" asp-route-id="@user.Id">edit</a>

            </td>
        </tr>
    }

</table>