@using eSim.Infrastructure.DTOs.AccessControl
@model RoleDTO

@{
    ViewBag.Title = "Add Role";
}
<div class="row my-3">
    <a asp-controller="Roles" asp-action="ManageRoles">
        <i class=" ri-arrow-left-line fs-3"></i>
    </a>
</div>

<h4>Add Role</h4>
<hr />

@if (TempData["ValidationError"] is not null)
{

    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        @TempData["ValidationError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole" method="post" enctype="application/x-www-form-urlencoded">

 <div class="form-group">
                <label asp-for="RoleName" class="control-label">Name</label>
                <input asp-for="RoleName" class="form-control" placeholder="Enter role name"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class=" btn rounded-pill btn-secondary waves-effect waves-light">Save</button>
                <button type="reset" class="btn rounded-pill btn-danger waves-effect waves-light">Reset</button>
            </div>
        </form>
    </div>
</div>
