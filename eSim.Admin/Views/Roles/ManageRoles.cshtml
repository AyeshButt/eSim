@using eSim.Infrastructure.DTOs.AccessControl
@model List<ManageRoleDTO>
@{
    ViewBag.Title = "Manage Roles";
}
<h4>Manage Roles</h4>

<hr />
@if (User.HasClaim("Roles", "create"))
{
    <a asp-action="AddRole" class="btn rounded-pill btn-secondary waves-effect waves-light float-end mb-3">Add Role</a>
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Role</th>
        <th>Action</th>
    </tr>

    @foreach (var user in Model.OrderBy(u=>u.RoleName))
    {
        <tr>
            <td>@user.RoleName</td>
            <td>
                @if (User.HasClaim("Roles", "edit"))
                {
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="edit" asp-action="EditRole" asp-route-id="@user.Id"><i class="ri-pencil-fill fs-5"></i></a>

                }

            </td>
        </tr>
    }

</table>