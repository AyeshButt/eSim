@model eSim.EF.Entities.SideMenu

@{
    ViewBag.Title = "Edit SideMenu";
}
<div class="row my-3">
    <a asp-controller="SideMenus" asp-action="Index">
        <i class=" ri-arrow-left-line fs-3"></i>
    </a>
</div>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit SideMenu</title>
</head>
<body>

<h4>Edit SideMenu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ParentId" class="control-label">Main Menu</label>
                    <select asp-for="ParentId" asp-items="@ViewBag.SideMenuList" class="form-control">
                        <option value="">---Select---</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Sub Menu</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter your title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="ControllerName" class="control-label"></label>
                <input asp-for="ControllerName" class="form-control" placeholder="Enter your controller" />
                <span asp-validation-for="ControllerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionName" class="control-label"></label>
                <input asp-for="ActionName" class="form-control" placeholder="Enter your action method" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>

                <div class="form-group mt-2">

                    <button type="submit" class="btn rounded-pill btn-secondary waves-effect waves-light">Update</button>
                    <button type="reset" class="btn rounded-pill btn-danger waves-effect waves-light">Reset</button>
                </div>
        </form>
    </div>
</div>



</body>
</html>
