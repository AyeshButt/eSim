@model eSim.EF.Entities.SideMenu

@{
    ViewBag.Title = "Delete SideMenu";
}

<div class="card">
    <div class="card-header">
        <h4>Delete Sub Menu</h4>

    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center col-4">Title</th>
                    <th class="text-center col-4">Controller Name</th>
                    <th class="text-center col-4">Action Method Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-center col-4">@Model.Title</td>

                    <td class="text-center col-4">
                        @(Model.ControllerName is null ? "-" : Model.ControllerName)
                    </td>

                    <td class="text-center col-4">
                        @(Model.ActionName is null ? "-" : Model.ActionName)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="float-end">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                @if (User.HasClaim("SideMenus", "delete"))
                {
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>

                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Sub Menu</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p class="text-center my-4">Are you sure you want to delete this?</p>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <button type="submit" class="btn btn-primary">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*                     <button type="submit" class="btn btn-primary">Delete</button>
                *@                }
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>
