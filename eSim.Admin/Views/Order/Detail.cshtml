@model eSim.Infrastructure.DTOs.Middleware.Order.GetOrderDetailResponse

@{
    ViewData["Title"] = "Order Detail";
}

<div class="row">
    <div class="col-xl-12">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center alert-dismissible fade show mt-4" role="alert">
                <strong>@ViewBag.Error</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else
        {
            <div class="row justify-content-center mb-3">
                <div class="col-lg-6">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Order Detail</h4>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped align-middle mb-0">
                            <tbody>
                                <tr>
                                    <th>Order Reference</th>
                                    <td>@Model.OrderReference</td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td>@Model.Total</td>
                                </tr>
                                <tr>
                                    <th>Currency</th>
                                    <td>@Model.Currency</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>@Model.Status</td>
                                </tr>
                                <tr>
                                    <th>Status Message</th>
                                    <td>@Model.StatusMessage</td>
                                </tr>
                                <tr>
                                    <th>Created Date</th>
                                    <td>@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Assigned</th>
                                    <td>@(Model.Assigned == true ? "Yes" : "No")</td>
                                </tr>
                                <tr>
                                    <th>Source IP</th>
                                    <td>@Model.SourceIP</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer">
                    <a asp-action="Index" asp-controller="Order" class="btn btn-secondary rounded-pill">Back to List</a>
                </div>
            </div>
                </div>
            </div>
        }
    </div>
</div>
