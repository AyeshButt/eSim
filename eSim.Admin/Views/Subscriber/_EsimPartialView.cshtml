@using eSim.Infrastructure.DTOs.Esim
@model List<EsimsDTO>


<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Inventory</h4>
            </div>
            <div class="card-body">
                @if(Model.Any()){
                <table id="example" class="datatable-scroll table-hover table dt-responsive nowrap align-middle mdl-data-table" style="width:100%">

                    <thead>
                        <tr>
                            <th scope="col">Iccid</th>
                            <th scope="col">CustomerRef</th>
                            <th scope="col">Assigned Date</th>
                            <th scope="col">Action Date</th>
                            <th scope="col">Physical</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Iccid </td>
                                <td>@item.CustomerRef</td>
                                <td>@item.AssignedDate</td>
                                <td>@item.ActionDate</td>
                                <td>@item.Physical</td>
                                <td>

                                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="edit" class="mx-2" asp-action="Detail" asp-controller="Subscriber" asp-route-id="@item.Iccid">
                                        <i class="ri-eye-fill fs-5"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                }
                else
                {
                    <h5 class=" text-center bg-info p-3">There is nothing to show</h5>
                }
            </div>
        </div>
    </div>
</div>