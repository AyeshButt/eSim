@using eSim.Infrastructure.DTOs.Subscribers
@model List<SubscribersResponseViewModel>

@{
    var uniqueClients = Model
            .GroupBy(m => m.ClientId)
            .Select(g => g.First())
            .ToList();
}

@if (Model.Any())
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">Choices</h4>
                </div>
                <div class="card-body">
                    <div>
                        <div>
                            <div class="row align-items-end">
                                <div class="col-xxl-3 col-sm-4">
                                    <div class="mb-3">
                                        <label for="choices-single-default" class="form-label text-muted">Filter By Cients</label>
                                        @*   <p class="text-muted">Set <code>data-choices</code> attribute to set a default single select.</p> *@
                                        <select class="form-control" data-choices name="choices-single-default"
                                                id="choices-single-default">
                                            <option value="">Select Client</option>
                                            @foreach (var item in uniqueClients)
                                            {
                                                <option value="@item.ClientId">@item.ClientName</option>
                                            };
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xxl-3 col-sm-4">
                                    <div class="mb-3">
                                        <label for="choices-single-default" class="form-label text-muted">Filter By Email</label>
                                        @*                                   <p class="text-muted">Set <code>data-choices</code> attribute to set a default single select.</p> *@
                                        <select class="form-control" data-choices name="choices-single-default"
                                                id="choices-single-default">
                                            <option value="">Select Subscriber</option>
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.Email">@item.Email</option>
                                            };
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xxl-1 col-sm-4 ">
                                    <div class="mb-3">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="ri-equalizer-fill me-1 align-bottom"></i>
                                            Filters
                                        </button>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Subscriber List</h4>

                </div><!-- end card header -->

                <div class="card-body">
                    <div class="live-preview">
                        <div class="table-responsive">
                            <table class="table table-respnsive table-striped table-nowrap align-middle mb-0">
                                <thead>
                                    <tr>
                                
                                        <th scope="col">Active</th>
                                        <th scope="col">Client</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">CreatedAt</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>

                                                <div class="form-check form-switch">
                                                    <input class="form-check-input client-toggle-switch"
                                                           type="checkbox"
                                                           id="switch-@item.Id"
                                                           data-url="@Url.Action("DisableClient", "Client", new { id = item.Id })"
                                                           data-client-id="@item.Id"
                                                    @(item.Active ? "checked" : "") />
                                                </div>
                                            </td>
                                            <td>@item.ClientName</td>
                                            <td>@(item.FirstName + " " + item.LastName)</td>
                                            <td>@item.Email</td>
                                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>

                                            <td>

                                                <a data-bs-toggle="tooltip" data-bs-placement="top" title="edit" class="mx-2" asp-action="UpdateClient" asp-controller="Subscriber" asp-route-id="@item.Id"><i class="ri-pencil-fill fs-5"></i></a>

                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div><!-- end card-body -->
            </div><!-- end card -->
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->
}
else
{
    <!-- Danger Alert -->
    <div class="alert alert-danger text-center alert-dismissible fade show" role="alert">
        <strong> No subscriber available</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

