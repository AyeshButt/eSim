@model eSim.Infrastructure.DTOs.Account.ForgotPasswordDTO

@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="ladylip" data-sidebar-size="lg">
<head>
    <partial name="~/Views/Shared/_title_meta.cshtml">
    <partial name="~/Views/Shared/_head_css.cshtml">
</head>
<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="@Url.Action("Index", "Account")" class="d-inline-block auth-logo">
                                    <img src="~/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-16 fw-semibold">eSim Admin Portal</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Forgot Password?</h5>
                                    <p class="text-muted">Reset password with eSim</p>

                                    <lord-icon src="https://cdn.lordicon.com/rhvddzym.json"
                                               trigger="loop"
                                               colors="primary:#0ab39c"
                                               class="avatar-xl">
                                    </lord-icon>

                                </div>

                                <div class="alert border-0 alert-warning text-center mb-2 mx-2" role="alert">
                                    Enter your email and an OTP will be sent to you!
                                </div>
                                <div class="p-2">
                                    <form asp-action="ForgotPassword" asp-controller="Account" method="post" enctype="application/x-www-form-urlencoded">
                                        <div class="text-center">
                                            @if (TempData["OTPDetailsNotAdded"] is not null)
                                            {
                                                <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
                                                    @TempData["OTPDetailsNotAdded"]
                                                </div>
                                            }
                                            @if (TempData["EmailValidationError"] is not null)
                                            {
                                                <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
                                                    @TempData["EmailValidationError"]
                                                </div>
                                            }
                                            @if (TempData["UserNotFound"] is not null)
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                                    @TempData["UserNotFound"]
                                                </div>
                                            }
                                            @if (TempData["LinkExpired"] is not null)
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                                    @TempData["LinkExpired"]
                                                </div>
                                            }
                                            @if (TempData["ResetLinkExpired"] is not null)
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                                    @TempData["ResetLinkExpired"]
                                                </div>
                                            }
                                            @if (TempData["OTPFailed"] is not null)
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                                    @TempData["OTPFailed"]
                                                </div>
                                            }
                                            @if (TempData["EmailNotReceived"] is not null)
                                            {
                                                <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                                                    @TempData["EmailNotReceived"]
                                                </div>
                                            }
                                        </div>

                                        <div class="mb-4">
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="text-center mt-4">
                                            <button class="btn btn-success w-100" type="submit">Send Reset Link</button>
                                        </div>
                                    </form><!-- end form -->
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->

                        <div class="mt-4 text-center">
                            <p class="mb-0">Wait, I remember my password... <a href="@Url.Action("Index", "Account")" class="fw-semibold text-primary text-decoration-underline"> Click here </a> </p>
                        </div>

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> eSim
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

    <partial name="~/Views/Shared/_vendor_scripts.cshtml">

        @* partial view for scripts *@

        <partial name="~/Views/Account/_CommonScripts.cshtml" />

</body>
</html>