@model eSim.Infrastructure.DTOs.Client.ClientDTO

@{
    ViewData["Title"] = "Create Client";
}

    <div class="row my-2">
        <a asp-controller="Client" asp-action="Index">
            <i class=" ri-arrow-left-line fs-3"></i>
        </a>
    </div>


<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateClient" asp-controller="Client" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Create Client</h4>
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div class="row gy-4">
                            <div class="col-xxl-3 col-md-6">
                                <div>
                                    <label asp-for="Name" class="form-label">Name</label>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter client name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>


                                <div>
                                    <label asp-for="PrimaryEmail" class="form-label">Email</label>
                                    <input type="email" asp-for="PrimaryEmail" class="form-control" placeholder="Enter client email" />
                                    <span asp-validation-for="PrimaryEmail" class="text-danger"></span>

                                </div>


                            </div>
                            <!--end col-->
                        </div>
                        <!--end row-->
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn rounded-pill btn-secondary waves-effect waves-light">Submit</button>

                    <button type="reset" class="btn rounded-pill btn-danger waves-effect waves-light">Reset</button>
                </div>
            </div>
        </form>
    </div>
    <!--end col-->
</div>

@section scripts {
    <script>
        @if (TempData["ClientError"] != null)
        {
            <text>
                            ToastNotification("@TempData["ClientError"]","error")
            </text>
        }

    </script>
}        
