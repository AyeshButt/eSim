@using eSim.Infrastructure.DTOs.Global
@using eSim.Infrastructure.DTOs.Middleware.Inventory
@model List<SubscriberInventoryResponse>

@{
    var List = Model;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0 d-inline">Your eSIMs</h5>
            </div>
            <div class="card-body">
                <table class="datatable-scroll table-hover table dt-responsive nowrap align-middle mdl-data-table" style="width:100%">
                    <thead>
                    <tr>
                        <th>Bundle</th>
                        <th>ID</th>
                        <th>Country</th>
                        <th>Data</th>
                        <th>Local Calls</th>
                        <th>Local SMS</th>
                        <th>Duration</th>
                        <th>Includes Number</th>
                        <th>Remaining</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in List)
                            {
                                <tr class="View-Detail" data-ID="@item.Item" data-bs-toggle="modal" data-bs-target=".bs-example-modal-center">
                                    <td>@item.Description</td>
                                    <td>@item.Item</td>
                                    <td>@item.Country</td>
                                    <td>@item.DataAmount</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>@item.Duration</td>
                                    <td>*</td>
                                    <td>@item.Quantity</td>
                                    <td><button class="btn btn-sm btn-soft-primary">!</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->


<div class="modal modal-lg fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div id="bundleDetailLoader" class="text-center my-5" style="display:none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading bundle details...</p>

                </div>

                <div id="bundleDetailModalBody">
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts {
    <script>
        $(document).on('click', '.View-Detail', function()
            {
                var name = $(this).data('ID');

                     $('.bs-example-modal-center').modal('show');

                    // Show loader and clear any previous data
                $('#bundleDetailLoader').show();
                    $('#bundleDetailModalBody').html('');

                $.ajax({
                    url: '@Url.Action("Detail", "Esim")',
                    type: 'GET',
                    data: { ID: name },
                    success: function (html) {
                        $('#bundleDetailLoader').hide();
                        $('#bundleDetailModalBody').html(html); // inject partial view
                        $('.bs-example-modal-center').modal('show'); // open modal
                    },

                     error: function () {
                        $('#bundleDetailLoader').hide();
                        $('#bundleDetailModalBody').html('<p class="text-danger">Failed to load bundle details.</p>');
                    }
                });
            });
    </script>
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>

    <script src="~/assets/js/app.js"></script>
    }
