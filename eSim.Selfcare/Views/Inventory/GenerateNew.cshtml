@using eSim.Infrastructure.DTOs.Esim
@using eSim.Infrastructure.DTOs.Global
@* @model Result<ApplyBundleToEsimResponse> *@
@model Result<ApplyBundleToEsimResponse>


@{

    // var iccid = ViewBag.Iccid;
    var iccid = Model.Data.Esims.FirstOrDefault().Iccid;
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card p-2">
            <div class = "card-body">
                <div class="row">
                    <h4>eSIM Created Successfully</h4>
                    <div class="d-flex justify-content-between align-items-center mt-4 border border-2 rounded-3 py-3">
                        <div class="pt-2">
                            <h5><i class="mdi mdi-sim-outline mdi-24px"></i> Your Assigned SIM</h5>
                        </div>
                        
                        <div class="mb-0">
                            <button  data-url="@Url.Action("DownloadQr", "Inventory", new { id = iccid })"
                                    class="btn btn-outline-primary redirect-btn">
                                <i class="mdi  mdi-qrcode   me-1"></i> <b>Download QR</b>
                            </button>
                            @* <a class="btn btn-primary"><i class="mdi mdi-download me-1"></i><b> Download csv</b></a> *@
                        </div>
                    </div>
                </div>
                <div class="mt-4 text-center"> 
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">Finish</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).on('click', '.redirect-btn', function () {
            const url = $(this).data('url');
            window.location.href = url;
        });
    </script>
}

                        