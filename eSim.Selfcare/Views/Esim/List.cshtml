@model IEnumerable<eSim.Infrastructure.DTOs.Esim.EsimDTO>
@{
    ViewBag.Title = "Esim List";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Your eSIMs</h5>
            </div>
            <div class="card-body">
                <table id="scroll-horizontal" class="table nowrap align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th>ICCID</th>
                            <th>Reference</th>
                            <th>Last Action</th>
                            <th>Last Action Date</th>
                            <th>Assigned Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><i class="mdi mdi-qrcode mdi-24px"></i>  @item.Iccid</td>
                                    <td>@item.CustomerRef</td>
                                    <td>@item.LastAction</td>
                                    <td>@item.ActionDate</td>
                                    <td>@item.AssignedDate</td>
                                    <td><a class="btn btn-sm btn-soft-primary" asp-action="Details" asp-controller="Esim" asp-route-iccid="@item.Iccid"><i class="ri-eye-line"></i></a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
